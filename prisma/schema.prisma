generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============== MULTI-TENANT MODELS ==============

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships TenantMembership[]
  connections Connection[]
  dashboards  Dashboard[]
  auditLogs   AuditLog[]

  @@index([slug])
}

enum TenantRole {
  OWNER  // Full access, can delete tenant
  ADMIN  // Manage members, full CRUD
  MEMBER // CRUD on resources
  VIEWER // Read-only
}

model TenantMembership {
  id        String     @id @default(cuid())
  tenantId  String
  userId    String     // Keycloak sub
  role      TenantRole
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([userId])
  @@index([tenantId])
}

// ============== RESOURCE MODELS ==============

model Connection {
  id               String   @id @default(cuid())
  name             String
  connectionString String
  dbType           String   @default("postgresql")
  tenantId         String
  createdBy        String   // userId who created (audit)
  readonly         Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  tenant         Tenant                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  dashboards     DashboardConnection[]
  dataDictionary DataDictionary[]

  @@index([tenantId])
}

// Data Dictionary - friendly labels and enum mappings for columns
model DataDictionary {
  id           String   @id @default(cuid())
  connectionId String
  tableName    String?  // null = applies to all tables with this column
  columnName   String
  label        String?  // Friendly label (e.g., "created_at" -> "Data de Criação")
  description  String?  // Tooltip/help text
  formatType   String?  // currency, date, datetime, phone, percent, number, etc.
  enumMapping  Json?    // {"PENDING": "Aguardando", "PAID": "Pago"}
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  connection Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@unique([connectionId, tableName, columnName])
  @@index([connectionId])
  @@index([connectionId, tableName])
}

model AuditLog {
  id         String   @id @default(cuid())
  tenantId   String?
  userId     String
  actionName String
  params     Json?
  success    Boolean
  error      String?
  timestamp  DateTime @default(now())

  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([userId])
  @@index([timestamp])
}

model Dashboard {
  id             String    @id @default(cuid())
  name           String
  description    String?
  tenantId       String
  createdBy      String    // userId who created (audit)
  layout         Json      @default("{}")
  widgets        Json      @default("[]")
  isPublic       Boolean   @default(false)
  shareToken     String?   @unique
  shareExpiresAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  tenant      Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  connections DashboardConnection[]

  @@index([tenantId])
  @@index([shareToken])
}

model DashboardConnection {
  id           String     @id @default(cuid())
  dashboardId  String
  connectionId String
  dashboard    Dashboard  @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@unique([dashboardId, connectionId])
  @@index([dashboardId])
  @@index([connectionId])
}
