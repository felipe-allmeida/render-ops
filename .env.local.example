# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/renderops?schema=public"

# Keycloak
KEYCLOAK_ID="render-ops-client"
KEYCLOAK_SECRET=""  # Client secret - required for user management (Admin API)
KEYCLOAK_ISSUER="http://localhost:8080/realms/render-ops"
# Note: The client must have "Service accounts roles" enabled and have the
# "manage-users" role from realm-management client for user creation/search

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-change-in-production"

# Webhook allowlist (comma-separated domains)
WEBHOOK_ALLOWLIST="example.com,api.myapp.com,webhook.site"

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
